with "config/blinky_tests_config.gpr";
with "config/blinky_tests_list_config.gpr";

project Blinky_Tests is
   for Source_Dirs use ("src/**", "common/", "config/");
   for Object_Dir use "obj/" & Blinky_Tests_Config.Build_Profile;
   for Create_Missing_Dirs use "True";
   for Exec_Dir use "bin";
   for Main use Blinky_Tests_List_Config.Test_Files;

   package Compiler is
      for Default_Switches ("Ada") use
        Blinky_Tests_Config.Ada_Compiler_Switches;
   end Compiler;

   package Binder is
      for Switches ("Ada") use ("-Es"); --  Symbolic traceback
   end Binder;
end Blinky_Tests;
